//f(n)=f(n-1)+f(n-2)+f(n-3) , f(0)=f(1)=0 , f(2)=1
int solve(int n){
  if(n<=1) return 0;
  else if(n==2) return 1;
  return solve(n-1)+solve(n-2)+solve(n-3);
}

//using dynamic programming
Class Bz{
  int []dp;
  Bz(){
    dp=new int[100000+9];
    Arrays.fill(dp,-1);
  }
  int solve(int n){
    if(n<=1) return 0;
    if(n==2) return 1;
    if(dp[n]!=-1) return dp[n];
    return dp[n]=solve(n-1)+solve(n-2)+solve(n-3);
  }
}
